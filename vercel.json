{
    "version": 2,
    "framework": "react-router",
    "installCommand": "npm install",
    "buildCommand": "npm run build",
    "outputDirectory": "dist/client",
    "rewrites": [
        {
            "source": "/assets/(.*)",
            "destination": "/assets/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/server.ts"
        }
    ],
    "functions": {
        "server.ts": {
            "runtime": "edge"
        }
    }
}